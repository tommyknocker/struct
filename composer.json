{
  "name": "tommyknocker/struct",
  "description": "PHP Structure helper with typed properties and attributes",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "struct",
    "struct-helper",
    "data-structure",
    "schema",
    "validation",
    "typed properties",
    "attributes",
    "type-casting",
    "data-validation",
    "template-driven"
  ],
  "authors": [
    {
      "name": "Vasiliy Krivoplyas",
      "email": "vasiliy@krivoplyas.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "psr/container": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^2.0",
    "friendsofphp/php-cs-fixer": "^3.89"
  },
  "autoload": {
    "psr-4": {
      "tommyknocker\\struct\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "tommyknocker\\struct\\tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "phpstan": "./vendor/bin/phpstan analyse",
    "cs-fix": "./vendor/bin/php-cs-fixer fix",
    "cs-check": "./vendor/bin/php-cs-fixer fix --dry-run --diff",
    "check": [
      "@cs-check",
      "@phpstan",
      "@test"
    ]
  }
}
