{
  "name": "tommyknocker/struct",
  "description": "PHP Structure helper with typed properties and attributes",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "struct",
    "struct-helper",
    "data-structure",
    "schema",
    "validation",
    "typed properties",
    "attributes",
    "type-casting",
    "data-validation",
    "template-driven",
    "dto",
    "data-transfer-object",
    "immutable",
    "readonly",
    "json-serialization",
    "array-access",
    "php8",
    "php81",
    "reflection",
    "metadata",
    "factory-pattern",
    "psr-11",
    "dependency-injection",
    "api-validation",
    "form-validation",
    "serialization",
    "deserialization",
    "type-safe",
    "runtime-validation",
    "static-analysis",
    "phpstan"
  ],
  "authors": [
    {
      "name": "Vasiliy Krivoplyas",
      "email": "vasiliy@krivoplyas.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "psr/container": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0|^11.0",
    "phpstan/phpstan": "^2.0",
    "friendsofphp/php-cs-fixer": "^3.89"
  },
  "autoload": {
    "psr-4": {
      "tommyknocker\\struct\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "tommyknocker\\struct\\tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "test-examples": "./scripts/test-examples.sh",
    "test-coverage": "./vendor/bin/phpunit --coverage-html coverage",
    "phpstan": "./vendor/bin/phpstan analyse",
    "phpstan-baseline": "./vendor/bin/phpstan analyse --generate-baseline",
    "cs-fix": "./vendor/bin/php-cs-fixer fix",
    "cs-check": "./vendor/bin/php-cs-fixer fix --dry-run --diff",
    "cs-config": "./vendor/bin/php-cs-fixer config:dump",
    "quality": [
      "@cs-check",
      "@phpstan",
      "@test"
    ],
    "quality-fix": [
      "@cs-fix",
      "@test"
    ],
    "check": [
      "@cs-check",
      "@phpstan",
      "@test",
      "@test-examples"
    ],
    "ci": [
      "@cs-check",
      "@phpstan",
      "@test",
      "@test-examples"
    ],
    "post-install-cmd": [
      "@test-examples"
    ],
    "post-update-cmd": [
      "@test-examples"
    ]
  }
}
